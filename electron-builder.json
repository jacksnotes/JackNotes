{
  "productName": "JackNotes",
  "appId": "com.jacknotes.app",
  "directories": {
    "output": "dist_electron2"
  },
  "files": [
    "dist_electron/**/*",
    "node_modules/**/*",
    "public/**/*"
  ],
  "win": {
    "icon": "./public/app-icons/client-256.ico",
    "target": "zip"
  },
  "mac": {
    "icon": "./public/app-icons/jacksnotes.icns",
    "target": [
      "zip"
    ]
  },
  "linux": {
    "icon": "./public/app-icons/JackNotes.png",
    "target": [
      "AppImage",
      "deb",
      "snap"
    ]
  },
  "asar": true,
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "JackNotes"
  },
  "publish": {
    "provider": "github"
  }
}